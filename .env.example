# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
# For development
VITE_APP_URL=http://localhost:3000
# For production (replace with your actual domain)
# VITE_APP_URL=https://yourdomain.com

# Security Configuration
# CSP Violation Reporting URI (optional)
VITE_CSP_REPORT_URI=https://your-monitoring-service.com/csp-violations

# Security Feature Flags
VITE_ENABLE_CSP_REPORTING=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_CSP_ENVIRONMENT=auto  # auto, development, production, test

# Development Security Settings
VITE_DEV_SECURITY_MODE=balanced  # strict, balanced, permissive
VITE_ENABLE_DEV_CSP_LOGGING=true

# Production Security Settings
VITE_PROD_CSP_REPORT_ONLY=false
VITE_ENABLE_HSTS=true
VITE_ENABLE_CSP_HASHES=true